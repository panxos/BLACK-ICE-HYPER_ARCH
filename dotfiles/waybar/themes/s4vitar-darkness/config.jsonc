[
    {
        "layer": "top",
        "position": "top",
        "height": 32,
        "spacing": 4,
        "modules-left": [
            "custom/launcher",
            "cpu",
            "memory",
            "disk",
            "custom/vpn"
        ],
        "modules-center": [
            "hyprland/workspaces"
        ],
        "modules-right": [
            "custom/settarget",
            "clock",
            "pulseaudio",
            "network",
            "custom/power"
        ],
        "custom/launcher": {
            "format": " 󰣇 ",
            "on-click": "wofi --show drun",
            "tooltip": false
        },
        "cpu": {
            "format": "   {usage}% ",
            "interval": 2
        },
        "memory": {
            "format": " 󰍛 {percentage}% ",
            "interval": 2
        },
        "disk": {
            "format": " 󰋊 {free} ",
            "interval": 60
        },
        "custom/vpn": {
            "format": " {}",
            "exec": "~/.config/bin/vpn_status",
            "return-type": "json",
            "interval": 5
        },
        "hyprland/workspaces": {
            "format": "{icon}",
            "on-click": "activate",
            "format-icons": {
                "active": "󰚰",
                "default": "󰚯",
                "urgent": "󰚯",
                "empty": "○"
            },
            "persistent-workspaces": {
                "*": 5
            }
        },
        "clock": {
            "format": " 󰥔 {:%H:%M   %m-%d} ",
            "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>"
        },
        "pulseaudio": {
            "format": " {icon} {volume}% ",
            "format-muted": " 󰝟 Muted ",
            "format-icons": {
                "default": [
                    "󰕿",
                    "󰖀",
                    "󰕾"
                ]
            },
            "on-click": "pavucontrol"
        },
        "network": {
            "format-wifi": " 󰖩 {bandwidthDownBits} ",
            "format-ethernet": " 󰈀 {ipaddr} ",
            "format-disconnected": " 󰖪 ",
            "tooltip-format": "{essid} {signalStrength}%"
        },
        "custom/power": {
            "format": " ⏻ ",
            "on-click": "~/.config/bin/power_menu.sh",
            "tooltip": false
        }
    },
    {
        "layer": "top",
        "position": "bottom",
        "height": 30,
        "spacing": 4,
        "modules-left": [
            "custom/docker",
            "custom/kvm",
            "custom/updates"
        ],
        "modules-center": [
            "custom/local_ip",
            "custom/public_ip"
        ],
        "modules-right": [
            "custom/player",
            "tray"
        ],
        "custom/docker": {
            "exec": "~/.config/bin/docker_status",
            "return-type": "json",
            "interval": 10,
            "format": " {} "
        },
        "custom/kvm": {
            "exec": "~/.config/bin/kvm_status",
            "return-type": "json",
            "interval": 10,
            "format": " {} "
        },
        "custom/updates": {
            "exec": "checkupdates | wc -l",
            "interval": 3600,
            "format": " 󰚰 {} "
        },
        "custom/local_ip": {
            "exec": "~/.config/bin/local_ip",
            "return-type": "json",
            "interval": 10,
            "format": " {} "
        },
        "custom/public_ip": {
            "exec": "~/.config/bin/public_ip",
            "return-type": "json",
            "interval": 60,
            "format": " {} "
        },
        "custom/player": {
            "exec": "playerctl metadata --format '󰝚 {{artist}} - {{title}}' 2>/dev/null || echo ''",
            "format": " {} ",
            "interval": 5,
            "on-click": "playerctl play-pause"
        },
        "tray": {
            "icon-size": 18,
            "spacing": 10
        }
    }
]