#!/bin/bash
# docker_status (Clean - No Colors)
if command -v docker &>/dev/null; then
    count=$(docker ps -q 2>/dev/null | wc -l)
    if [ "$count" -gt 0 ]; then
        echo "{\"text\": \"  $count\", \"class\": \"active\", \"tooltip\": \"Docker Running: $count containers\"}"
    else
        echo "{\"text\": \"  0\", \"class\": \"inactive\", \"tooltip\": \"Docker Daemon Active\"}"
    fi
else
    echo "{\"text\": \"\", \"class\": \"missing\"}"
fi
